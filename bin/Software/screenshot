#!/bin/bash

SCREENSHOT_NAME=screenshot
TEMPFILE=/var/tmp/dwm-append/screenshot
SLEEP=5

if [[ -f $TEMPFILE ]]; then
	exit 1
fi

sleep 1

printf "SCREENSHOT: select region" > $TEMPFILE
scrot -s $SCREENSHOT_NAME'.png' -q 100 -c

printf "SCREENSHOT: uploading" > $TEMPFILE
puush $SCREENSHOT_NAME.png

if [[ $? != 0 ]]; then
	printf "SCREENSHOT: failed to upload file (error $?)" > $TEMPFILE
else
	printf "SCREENSHOT: done" > $TEMPFILE
fi

sleep $SLEEP
rm $SCREENSHOT_NAME.png $TEMPFILE
